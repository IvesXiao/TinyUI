extends ../layout

block content
    include ../common/banner/main

    .zWrap.pt30
        .zCol3
            include ../common/sidebar/js
        .zCol9.pl20
            h3(data-active="下拉选框") Select 

            h4 1. 单选框
            .zExample.mt20
                p.mt20
                    select.zIpt.zSlc.w200
                        option(disabled) anker.com
                        option(selected) apple.com
                        option mi.com
                        option google.com
                .zCode
                    code.language-jade.
                        select.zIpt.zSlc.w200(multiple)
                            option(disabled) anker.com
                            option(selected) apple.com
                            option mi.com
                            option google.com

            h4 2. 多选框
            .zExample.mt20
                p.mt20
                    select.zIpt.zSlc.w200(multiple)
                        option(selected) anker.com
                        option(selected) apple.com
                        option mi.com 
                        option google.com
                .zCode
                    code.language-jade.
                        select.zIpt.zSlc.w200(multiple)
                            option(disabled) anker.com
                            option(selected) apple.com
                            option mi.com 
                            option google.com

            h4 3. 分组多选下拉框
            .zExample.mt20
                p.mt20
                    select.zIpt.zSlc.w200(multiple)
                        optgroup(label="Sites")
                            option(selected) anker.com
                            option(selected) apple.com
                            option mi.com 
                            option google.com
                        optgroup(label="Fruit")
                            option Pear
                            option Bananer
                            option Apple
                        
                .zCode
                    code.language-jade.
                        select.zIpt.zSlc.w200(multiple)
                            optgroup(label="Sites")
                                option(selected) anker.com
                                option(selected) apple.com
                                option mi.com 
                                option google.com
                            optgroup(label="Fruit")
                                option Pear
                                option Bananer
                                option Apple



            .cb.h50


.zPanel, .zPanelPrimary, .zPanelInfo, .zPanelSuccess, .zPanelWarning, .zPanelDanger
	border 1px solid #ddd
	.zPanelHd
		background-color #f5f5f5
		line-height 40px
		padding-left 15px
		padding-right 15px
		padding-top 0
		padding-bottom 0
		margin 0
		display block
	.zPanelBd
		padding 15px
		border-top 1px solid #ddd

.zPanelPrimary
	border 1px solid #10a0ea
	.zPanelHd
		background-color #0e90d2
		color #fff
.zPanelInfo
	border 1px solid #46b8da
	.zPanelHd
		background-color #5bc0de
		color #fff
.zPanelSuccess
	border 1px solid #c9e7c9
	.zPanelHd
		background-color rgba(94,185,94,.2)
		color #5eb95e
.zPanelWarning
	border 1px solid #fbd0ae
	.zPanelHd
		background-color rgba(243,123,29,.2)
		color #f37b1d
.zPanelDanger
	border 1px solid #f5cecd
	.zPanelHd
		background-color rgba(221,81,76, .2)
		color #dd514c
	
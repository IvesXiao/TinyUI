.zToggle
    position relative
    display inline-block
    input[type="checkbox"]
        opacity 0
        position absolute
        left 100%
        top 0
        display block
        width 55px
        height 22px
        z-index 2
        cursor pointer
    span
        float left
        padding-right 6px
        &:before
            box-sizing border-box
            content 'OFF'
            color #fff 
            text-align left
            display block
            width 55px
            padding-left 23px
            font-size 12px
            padding-right 4px 
            height 22px
            line-height 22px 
            white-space nowrap
            background #CBD2D8
            border-radius 28px 
            position absolute
            left 100% 
            top 0
            transition all .2s
        &:after 
            content ''
            display block
            width 18px 
            height 18px
            border-radius 20px 
            position absolute
            left 100%
            top 2px 
            margin-left 3px
            background #7F8B97
            transition all .2s
    
    input[type="checkbox"]:checked
        + *:before
            content 'ON'
            color #0e90d2
            padding-left 10px
        + *:after
            background-color #0e90d2
            margin-left 34px
    
    
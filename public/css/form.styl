.zRadio, .zRadioWarning, .zRadioDanger
    position relative
    input[type="radio"]
        margin-right 6px
        opacity 0
    span
        transition all .2s
        &:before 
            content ''
            display none
            position absolute
            left 6px
            top 6px
            width 4px
            height 4px 
            background-color #3B99FC
            border-radius 200px
        &:after
            content ''
            display block
            position absolute
            left 0px
            top 0
            width 10px
            height 10px 
            border-radius 200px
            border 3px solid #ddd
    input[type='radio']:checked + :before
        display block
    input[type='radio']:checked + :after
        border 3px solid #3B99FC
    
    input[type='radio']:checked + *
        color #3B99FC

.zRadioWarning
    span
        &:before  
            background-color #f37b1d
    input[type='radio']:checked + :after
        border 3px solid #f37b1d
    input[type='radio']:checked + *
        color #f37b1d

.zRadioDanger
    span
        &:before  
            background-color #dd514c
    input[type='radio']:checked + :after
        border 3px solid #dd514c
    input[type='radio']:checked + *
        color #dd514c
        

.zCheckbox, .zCheckboxWarning, .zCheckboxDanger
    position relative
    input[type="checkbox"]
        margin-right 6px
        opacity 0
    span
        transition all .2s
        &:before 
            content ''
            display block
            position absolute
            left 0
            top 2px
            width 13px
            height 13px 
            border-radius 2px
            background-color #BDC3C7
        &:after
            content '„Å∏'
            color #fff
            display none
            position absolute
            left 0
            top -3px
            font-weight 700
            transform rotateX(180deg)
    
    input[type='checkbox']:checked 
        + *:before
            background-color #3B99FC
        + *:after
            display block
        + *
            color #3B99FC
.zCheckboxWarning
    input[type='checkbox']:checked 
        + *:before
            background-color #f37b1d
        + *
            color #f37b1d
.zCheckboxDanger
    input[type='checkbox']:checked 
        + *:before
            background-color #dd514c
        + *
            color #dd514c


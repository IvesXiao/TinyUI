.zBtn, .zBtnPrimary, .zBtnInfo, .zBtnSuccess, .zBtnWarning, .zBtnDanger, .zBtnGray
    padding 6px 12px
    height 34px
    box-sizing border-box
    margin-bottom 0
    font-size 14px
    font-weight 400
    line-height 1.42857143
    text-align center
    white-space nowrap
    vertical-align middle
    -ms-touch-action manipulation
    touch-action manipulation
    cursor pointer
    user-select none
    background-image none
    border 1px solid transparent
    border-radius 0
    color #fff
    text-decoration none
    display inline-block
    transition box-shadow .2s
    &:focus
        outline none
    &:hover
        box-shadow inset 0 100px 25px rgba(0, 0, 0, .2)
    &:active
        box-shadow inset 0 10px 25px rgba(0, 0, 0, .1)
.zBtn
    background-color #e2e2e2
    border-color #d9d9d9
    color #444
.zBtnPrimary
    background-color #0e90d2
    border-color #0c80ba
.zBtnInfo
    background-color #5bc0de
    border-color #46b8da
.zBtnSuccess
    background-color #5eb95e
    border-color #4db14d
.zBtnWarning
    background-color #f37b1d
    border-color #ea6e0c
.zBtnDanger
    background-color #dd514c
    border-color #d93c37
.zBtnGray
    background-color #50636F
    border-color #333
    
.zRadius 
    border-radius 4px
.zCircle 
    padding 6px 16px
    border-radius 200px

.zBtn:disabled, .zBtnPrimary:disabled, .zBtnInfo:disabled, .zBtnSuccess:disabled, .zBtnWarning:disabled, .zBtnDanger:disabled, .zBtnGray:disabled
    opacity .45
    cursor not-allowed
    pointer-events none
    &:hover
        box-shadow none
    &:active
        box-shadow none
.zBtn:disabled
    opacity .55
    

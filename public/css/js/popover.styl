.zPopoverWrap, .zPopoverWrapBottom, .zPopoverWrapRight
    box-shadow 0 5px 10px rgba(0,0,0,.2)
    position absolute
    top 0
    left 0
    z-index 1060
    background-color #fff
    box-sizing border-box
    border-width 1px
    border-style solid
    padding 0
    border-color #ddd
    min-width 200px
    max-width 350px
    *
        box-sizing border-box
    
    &:before
        display block
        position absolute
        left 30px
        margin-left -6px
        bottom -6px
        content ''
        border-left 6px solid transparent
        border-right 6px solid transparent
        border-top 6px solid transparent
        border-top-color #fff
    .zPopoverTitle
        background-color #f0f0f0
        margin 0
        padding 6px 10px
    .zPopoverContent
        padding 6px 10px
.zPopoverWrapBottom
    &:before
        bottom auto
        top -6px
        border-top 0
        border-bottom 6px solid transparent
        border-bottom-color #f0f0f0
.zPopoverWrapRight
    &:before
        left auto
        right 30px
.zTooltipWrap
    background #333
    color #fff
    padding 6px 10px
    border-color #333
    &:before
        display block
        position absolute
        left 30px
        margin-left -6px
        top -6px
        content ''
        border-left 6px solid transparent
        border-right 6px solid transparent
        border-bottom 6px solid transparent
        border-bottom-color inherit
    
.zDropdownUp
    .zTooltipWrap
        &:before
            top auto
            bottom -6px
            border-bottom 0
            border-top 6px solid transparent
            border-top-color inherit

.zTooltipWrap.warning
    background #f37b1d
    border-color #f37b1d
.zTooltipWrap.danger
    background #dd514c
    border-color #dd514c
.zTooltipWrap.info
    background #5eb95e
    border-color #5eb95e
    
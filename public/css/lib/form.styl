@import 'params'

.zRadio, .zRadioWarning, .zRadioDanger
    position relative
    box-sizing border-box
    *
        box-sizing border-box
    input[type="radio"]
        margin-right 6px
        opacity 0
    span
        transition all .2s
        &:before 
            content ''
            display none
            position absolute
            left 6px
            top 6px
            width 4px
            height 4px 
            background-color $primary
            border-radius 200px
        &:after
            content ''
            display block
            position absolute
            left 0px
            top 0
            width 10px
            height 10px 
            border-radius 200px
            border 3px solid #ddd
    input[type='radio']:checked + :before
        display block
    input[type='radio']:checked + :after
        border 3px solid $primary
    
    input[type='radio']:checked + *
        color $primary

.zRadioWarning
    span
        &:before  
            background-color $warning1
    input[type='radio']:checked + :after
        border 3px solid $warning1
    input[type='radio']:checked + *
        color $warning1

.zRadioDanger
    span
        &:before  
            background-color $danger1
    input[type='radio']:checked + :after
        border 3px solid $danger1
    input[type='radio']:checked + *
        color $danger1
        

.zCheckbox, .zCheckboxWarning, .zCheckboxDanger
    position relative
    input[type="checkbox"]
        margin-right 6px
        opacity 0
    span
        transition all .2s
        line-height 1em
        &:before 
            content ''
            display block
            position absolute
            font-family 'icomoon'
            color #fff
            left 0
            top 2px
            width 13px
            height 13px 
            border-radius 2px
            background-color #BDC3C7
        // &:after
        //     content "\e620"
        //     font-family 'icomoon'
        //     color #fff
        //     display none
        //     position absolute
        //     left 0
        //     top -3px
    
    input[type='checkbox']:checked 
        + *:before
            background-color $primary
            content "\e620"
        + *
            color $primary
.zCheckboxWarning
    input[type='checkbox']:checked 
        + *:before
            background-color $warning1
        + *
            color $warning1
.zCheckboxDanger
    input[type='checkbox']:checked 
        + *:before
            background-color $danger1
        + *
            color $danger1

.zIpt
    border 1px solid #ddd
    border-radius 0
    height 34px
    padding 6px 12px
    font-size 14px
    line-height 1.42857143
    color #555
    transition border-color ease-in-out .15s, box-shadow ease-in-out .15s
    display inline-block
    box-sizing border-box
    vertical-align middle
    &:focus
        outline none
        border 1px solid rgba(69, 153, 262, .8)
        box-shadow 0 0 8px rgba(69, 153, 262, .4)

.zIpt[disabled], .zIpt[readonly]
    background-color #eee
    border-color #ccc
.zIpt[disabled]
    cursor not-allowed


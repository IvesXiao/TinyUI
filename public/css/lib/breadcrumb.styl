.zBreadcrumb, .zBreadcrumbSlash
	list-style-type none
	overflow hidden
	margin-left 0
	padding-left 0
	line-height 2em
	box-sizing border-box
	li
		display inline-block
		float left
		white-space nowrap
		&:before
			content '>'
			color #888
			font-size 12px
			vertical-align middle
			margin-left 3px 
			margin-right 3px
		a 
			text-decoration none
			color inherit
	li:first-child
		&:before 
			content ''
	li.active
		color #888
	*
		box-sizing border-box	
.zBreadcrumbSlash
	li 
		&:before
			content '/'
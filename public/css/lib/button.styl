@import 'params'

.zBtn, .zBtnPrimary, .zBtnInfo, .zBtnSuccess, .zBtnWarning, .zBtnDanger, .zBtnGray
    text-align center
    height 34px 
    line-height 32px
    padding 0 12px
    display inline-block
    box-sizing border-box
    margin-bottom 0
    font-size 14px
    font-weight 400
    text-align center
    white-space nowrap
    vertical-align middle
    -ms-touch-action manipulation
    appearance none
    user-select none
    touch-action manipulation
    cursor pointer
    user-select none
    background-image none
    border 1px solid transparent
    border-radius 0
    color #fff
    text-decoration none
    display inline-block
    transition box-shadow .2s
    box-sizing border-box
    &:focus
        outline none
    &:hover
        box-shadow inset 0 100px 25px rgba(0, 0, 0, .1)
        text-decoration none
        color #fff
    &:active
        box-shadow inset 0 10px 25px rgba(0, 0, 0, .15)
        text-decoration none
        color #fff
.zBtn
    background-color #bec3c7
    border-color #bbb
   
.zBtnPrimary, .zBtn.primary
    background-color $primary
    border-color $primary1
.zBtnInfo, .zBtn.info
    background-color $info
    border-color $info1
.zBtnSuccess, .zBtn.success
    background-color $success
    border-color $success1
.zBtnWarning, .zBtn.warning
    background-color $warning
    border-color $warning1
.zBtnDanger, .zBtn.danger
    background-color $danger
    border-color $danger1
.zBtnGray, .zBtn.gray
    background-color #434A54
    border-color #333

.zRadius 
    border-radius 4px
.zCircle
    padding-left 15px 
    padding-right 15px
    border-radius 200px

.zBtn:disabled, .zBtnPrimary:disabled, .zBtnInfo:disabled, .zBtnSuccess:disabled, .zBtnWarning:disabled, .zBtnDanger:disabled, .zBtnGray:disabled
    opacity .45
    cursor not-allowed
    pointer-events none
    &:hover
        box-shadow none
    &:active
        box-shadow none
.zBtn:disabled
    opacity .55
    
.zBadge, .zBadgePrimary, .zBadgeInfo, .zBadgeSuccess, .zBadgeWarning, .zBadgeDanger
    background-color #aaa
    box-sizing border-box
    color #fff
    min-width 24px
    height 18px 
    line-height 18px
    font-size 12px
    display inline-block
    text-align center
    vertical-align middle
    padding 0 4px
.zBadgePrimary, .zBadge.primary
    background-color $primary
.zBadgeInfo, .zBadge.info
    background-color $info
.zBadgeSuccess, .zBadge.success
    background-color $success
.zBadgeWarning, .zBadge.warning
    background-color $warning
.zBadgeDanger, .zBadge.danger
    background-color $danger

.xs
    font-size 12px
    height 24px 
    line-height 22px
    padding 0 6px
.sm
    font-size 13px
    height 28px 
    line-height 26px
    padding 0 8px
.lg 
    font-size 15px
    height 38px 
    line-height 36px
    padding 0 18px
.xl
    font-size 16px
    height 42px 
    line-height 40px
    padding 0 25px

.zBadge.xs, .zBadgePrimary.xs, .zBadgeInfo.xs, .zBadgeSuccess.xs, .zBadgeWarning.xs, .zBadgeDanger.xs
    height 20px 
    line-height 20px
.zBadge.sm, .zBadgePrimary.sm, .zBadgeInfo.sm, .zBadgeSuccess.sm, .zBadgeWarning.sm, .zBadgeDanger.sm
    height 24px 
    line-height 24px
.zBadge.lg, .zBadgePrimary.lg, .zBadgeInfo.lg, .zBadgeSuccess.lg, .zBadgeWarning.lg, .zBadgeDanger.lg
    height 29px 
    line-height 29px
.zBadge.xl, .zBadgePrimary.xl, .zBadgeInfo.xl, .zBadgeSuccess.xl, .zBadgeWarning.xl, .zBadgeDanger.xl
    height 34px 
    line-height 34px
@import '../params'

.zWeekpickerWrap, .zWeekpickerWrapBottom, .zWeekpickerWrapRight
    box-shadow 0 5px 10px rgba(0,0,0,.2)
    position absolute
    top 0
    left 0
    z-index 1060
    background-color #fff
    box-sizing border-box
    border-width 1px
    border-style solid
    padding 0
    border-color #ddd
    min-width 200px
    max-width 360px
    *
        box-sizing border-box
    
    &:before
        display block
        position absolute
        left 15px
        margin-left -6px
        bottom -6px
        content ''
        border-left 6px solid transparent
        border-right 6px solid transparent
        border-top 6px solid transparent
        border-top-color #fff
    .zWeekpickerHd
        background-color #3bb4f2
        color #fff
        margin 0
        padding 0
        clear both
        height 42px
        text-align center
        padding 5px 50px
        font-size 16px
        i 
            font-weight 700
            display inline-block
            width 36px 
            height 32px 
            text-align center 
            line-height 32px
            position absolute
            top 5px 
            left 0
            cursor pointer
            transparent all .3s
            &:hover 
                background-color rgba(250, 250, 250, .15)
                color rgba(0, 0, 0, .5)
        i.iNext
            left auto
            right 0
        .zWeekpickerHdContent
            display block
            text-align center
            cursor pointer
            height 32px 
            line-height 32px
            &:hover 
                background-color rgba(250, 250, 250, .15)
                color rgba(0, 0, 0, .5)
    .zWeekpickerBd
        width 360px
        white-space normal
        padding-bottom 6px
        position relative
        >span 
            display inline-block
            width 45px 
            height 30px 
            line-height 30px 
            text-align center
            cursor pointer
            &:hover 
                background-color #f0f0f0         
        >span.active
            background-color #f0f0f0
            color #0084c7
            font-weight 500
        >span.weekOld
            color #89d7ff
        .timeInfo
            color #89d7ff
            position absolute
            right 12px
            bottom 9px
            i 
                color inherit
                font-size 12px 
                margin-right 4px

    .zWeekpickerBd.zWeekViewYear  
        >span
            width 120px 
            height 40px
            line-height 40px 
             
            

.zWeekpickerWrapBottom
    &:before
        bottom auto
        top -6px
        border-top 0
        border-bottom 6px solid transparent
        border-bottom-color #3bb4f2
.zWeekpickerWrapRight
    &:before
        left auto
        right 15px

//红色主题
.zWeekpickerWrap[data-theme="danger"], .zWeekpickerWrapBottom[data-theme="danger"], .zWeekpickerWrapRight[data-theme="danger"]
    .zWeekpickerHd
        background-color $danger 
    .zWeekpickerBd
        >span.active
            color #c10802 
        >span.weekOld
            color #f59490
        >.timeInfo
            color #f59490
.zWeekpickerWrapBottom[data-theme="danger"]
    &:before
        border-bottom-color $danger 


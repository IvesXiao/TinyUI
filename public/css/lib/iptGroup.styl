.zIptGroup
	padding 0
	position relative
	box-sizing border-box
	*
		box-sizing border-box
	.zIptPrefix
		position absolute
		vertical-align middle
		display inline-block
		left 0 
		top 0
		height 100%
		border 1px solid #ddd
		border-right 0
		min-width 45px
		z-index 2
		text-align center
		padding-top 0
		padding-bottom 0
	.zIptPrefix:not(.zBtnPrimary):not(.zBtn):not(.zBtnInfo):not(.zBtnSuccess):not(.zBtnWarning):not(.zBtnDanger)
		background #eee
		color #666
		line-height 2.4em
	.zIptPrefix + input
		margin-left 45px
	input + .zIptPrefix
		left auto
		rigth 0
		border-right 1px solid #ddd;
		border-left 0
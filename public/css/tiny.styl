html 
	-webkit-font-smoothing antialiased
body
	font-family "Microsoft YaHei",Arial,sans-serif
	color #333
	font-size 14px

.banner
	height 180px
	padding 10px 0
	color #666
	background-size 30px 30px
	background-color #F2F2F2
	background-image linear-gradient(0, #eaeaef 1px, transparent 1px, transparent), linear-gradient(90deg, #eaeaef 1px, transparent 1px, transparent)
	h2 
		font-size 36px 
		font-weight 100
		color #444

h3 
	padding-bottom 20px 
	border-bottom 1px solid #dfdfdf
	font-size 20px
h4 
	font-size 18px
p, div 
	line-height 1.5em
img 
	max-width 100%
figure
	margin 0
textarea 
	vertical-align top
	resize vertical

blockquote
	border-left 3px solid #dfdfdf
	margin 0
	padding 1em 0 1em 3em 
ul 
	margin 0
	padding-top 0
	li 
		margin 0

code, pre 
	font-family monospace
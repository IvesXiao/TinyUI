.zDropdown
    animation-duration .15s
    display none
    position absolute
    left 0
    background-color #fff
    border 1px solid #ddd
    list-style-type none
    padding 5px 0
    font-size 12px
    color #555
    li
        a 
            color inherit
            padding 0 15px 
            line-height 30px 
            display block
            text-decoration none
            text-align left
            transition background .15s
        a:not(.active)
            &:hover 
                background-color #eee
        a.active
            background-color #0e90d2
            color #fff
    &:before, &:after
        content ''
        width 0
        height 0
        display block
        position absolute
        border-top 6px solid #fff 
        border-left 6px solid transparent
        border-right 6px solid transparent
    &:before
        border-top 6px solid #ccc 

.zIconUp + .zDropdown
    bottom 100%
    margin-bottom 10px
    animation-name fadeInDown
    &:before, &:after
        left 20px 
        bottom -6px 
    &:before
        bottom -7px

.zIconDown + .zDropdown
    top 100%
    margin-top 10px
    animation-name fadeInUp
    &:before, &:after
        left 20px 
        top -6px 
        border-top 0
        border-bottom 6px solid #fff 
    &:before
        top -7px
        border-top 0
        border-bottom 6px solid #ccc

.zIconRight + .zDropdown
    left 100%
    top -12px
    margin-left 10px
    animation-name fadeInDown
    &:before, &:after
        top 20px 
        left -6px 
        border-left 0
        border-right 6px solid #fff
        border-top 6px solid transparent
        border-bottom 6px solid transparent
    &:before
        left -7px
        border-right 6px solid #ccc

